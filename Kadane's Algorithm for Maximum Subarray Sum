#include<bits/stdc++.h>
using namespace std;

int main()
{
  int n;
  int cs=0,ms=0;//Stores current sum and maximum sum
  cin>>n;
  vector<int> a;
  for(int i=0;i<n;++i)
  {
      int x;
      cin>>x;
      a.push_back(x);
  }
  for(int i=0;i<n;++i)
  {
     cs=cs+a[i];
     //If current sum becomes negative make it zero
     if(cs<0) 
      cs=0;
     
     ms=max(cs,ms);
  }
  cout<<ms<<endl;
  return 0;
}
